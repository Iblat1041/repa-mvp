# БАЗА ДАННЫХ
# Для локалки (SQLite)
REPA_DB_URL=sqlite+aiosqlite:///./repa.sqlite3
# Для Docker (Postgres) — раскомментируй при необходимости
# REPA_DB_URL=postgresql+asyncpg://repa_user:repa_pass@db:5432/repa

REPA_AUTO_CREATE_TABLES=True
REPA_ECHO_SQL=False
REPA_POOL_SIZE=5

# JWT
REPA_JWT_SECRET=change-me
REPA_JWT_ISSUER=repa
REPA_JWT_AUDIENCE=repa-users
REPA_JWT_EXP_MINUTES=720

# БИЗНЕС
REPA_CURRENCY=RUB
REPA_DEMO_TTL_DAYS=7
REPA_PROMO_DEFAULT_PERCENT=10

# CORS
REPA_CORS_ALLOW_ORIGINS=http://localhost:5173

# ОБЩЕЕ
LOG_LEVEL=INFO
REPA_APP_NAME=REPA-MVP
REPA_APP_VERSION=0.2.0
