APP_NAME=REPA
APP_ENV=development
APP_DEBUG=True
APP_HOST=0.0.0.0
APP_PORT=8000

# ------------------------------------------
# Безопасность
# ------------------------------------------
SECRET_KEY=change-me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ------------------------------------------
# База данных (SQLite для локального запуска)
