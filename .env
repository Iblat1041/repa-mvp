# =============================================================================
# DATABASE (локальная разработка на SQLite)
# =============================================================================
REPA_DB_URL=sqlite+aiosqlite:///./repa.sqlite3
REPA_AUTO_CREATE_TABLES=True
REPA_ECHO_SQL=False

# =============================================================================
# AUTH / JWT
# =============================================================================
REPA_JWT_SECRET=change-this-to-long-random-string
REPA_JWT_ISSUER=repa
REPA_JWT_AUDIENCE=repa-users
REPA_JWT_EXP_MINUTES=720   # 12 часов

# =============================================================================
# BUSINESS SETTINGS
# =============================================================================
REPA_CURRENCY=RUB
REPA_DEMO_TTL_DAYS=7
REPA_PROMO_DEFAULT_PERCENT=10

# =============================================================================
# CORS (укажи фронты; формат — JSON-список!)
# =============================================================================
REPA_CORS_ALLOW_ORIGINS=["http://localhost:5173"]

# =============================================================================
# MISC
# =============================================================================
REPA_APP_NAME=REPA-MVP
REPA_APP_VERSION=0.2.0
