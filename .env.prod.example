# БАЗА ДАННЫХ
REPA_DB_URL=postgresql+asyncpg://repa_user:strong_password@postgres:5432/repa
REPA_AUTO_CREATE_TABLES=False
REPA_ECHO_SQL=False
REPA_POOL_SIZE=10

# JWT
REPA_JWT_SECRET=replace_with_secure_random_secret
REPA_JWT_ISSUER=repa
REPA_JWT_AUDIENCE=repa-users
REPA_JWT_EXP_MINUTES=720

# БИЗНЕС-НАСТРОЙКИ
REPA_CURRENCY=RUB
REPA_DEMO_TTL_DAYS=7
REPA_PROMO_DEFAULT_PERCENT=10

# CORS
REPA_CORS_ALLOW_ORIGINS=https://repa.app,https://admin.repa.app

# ОБЩИЕ
LOG_LEVEL=WARNING
REPA_APP_NAME=REPA
REPA_APP_VERSION=1.0.0
